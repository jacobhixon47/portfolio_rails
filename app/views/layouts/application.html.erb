<!DOCTYPE html>
<html>
  <head>
    <title>Jacob Hixon | Web Developer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='main-theme'>
    <nav class="navbar navbar-default navbar-fixed-top">
      <ul class="nav navbar-nav navbar-right nav-list">
        <% if user_signed_in? %>
          <li>
            <%= link_to "CHANGE THEME", change_theme_path, :id => 'first-theme-button', remote: true %>
          </li>
          <li><%= link_to "Sign Out", destroy_user_session_path, :data => { :method => 'delete' } %></li>
        <% else %>
          <li><%= link_to "Admin", new_user_session_path %></li>
        <% end %>
          <li><%= link_to "About", about_path %></li>
          <li><a href="/">Home</a></li>
      </ul>
    </nav>
    <div class="container-fluid">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
      <%= yield %>
    </div>
  </body>
</html>
