<!DOCTYPE html>
<html>
  <head>
    <title>BudgetTracker</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <nav class="navbar navbar-default navbar-fixed-top">
      <ul class="nav navbar-nav navbar-right nav-list">
        <% if user_signed_in? %>
          <li><%= link_to "Sign Out", destroy_user_session_path, :data => { :method => 'delete' } %></li>
          <li><%= link_to "Admin", user_path(current_user) %></li>
        <% else %>
          <li><%= link_to "Admin", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
    <div class="container-fluid">
      <%= flash[:notice] %>
      <%= flash[:alert] %>
      <%= yield %>
    </div>
  </body>
</html>
